{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenAI Chat Completion Format",
  "description": "OpenAI-compatible message format for Soapy conversations",
  "type": "object",
  "required": ["messages"],
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Message"
      }
    }
  },
  "definitions": {
    "Message": {
      "type": "object",
      "required": ["role", "content"],
      "properties": {
        "role": {
          "type": "string",
          "enum": ["system", "user", "assistant", "tool"]
        },
        "content": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "Name of the function/tool (for role=tool)"
        },
        "tool_calls": {
          "type": "array",
          "description": "Tool calls made by the assistant",
          "items": {
            "$ref": "#/definitions/ToolCall"
          }
        },
        "tool_call_id": {
          "type": "string",
          "description": "ID of the tool call this message is responding to (for role=tool)"
        }
      }
    },
    "ToolCall": {
      "type": "object",
      "required": ["id", "type", "function"],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "const": "function"
        },
        "function": {
          "type": "object",
          "required": ["name", "arguments"],
          "properties": {
            "name": {
              "type": "string"
            },
            "arguments": {
              "type": "string",
              "description": "JSON string of function arguments"
            }
          }
        }
      }
    }
  }
}
