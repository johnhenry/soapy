{
  "name": "soapy-backend",
  "version": "1.0.0",
  "description": "Soapy - Hybrid SOAP/REST AI API System",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "setup-test-data": "tsx src/cli/setup-test-data.ts",
    "health": "tsx src/cli/soapy-health.ts",
    "soapy": "tsx src/cli/soapy.ts"
  },
  "bin": {
    "soapy": "./dist/cli/soapy.js",
    "soapy-health": "./dist/cli/soapy-health.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@fastify/sse": "^0.4.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.0.0",
    "ajv": "^8.12.0",
    "dotenv": "^16.3.1",
    "fastify": "^5.0.0",
    "isomorphic-git": "^1.25.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.0.0",
    "openai": "^4.20.0",
    "pino": "^8.16.0",
    "strong-soap": "^5.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.53.0",
    "openapi-types": "^12.1.3",
    "prettier": "^3.1.0",
    "supertest": "^6.3.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "soap",
    "rest",
    "api",
    "ai",
    "git",
    "openai",
    "anthropic"
  ],
  "author": "",
  "license": "MIT"
}
